{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "DOM",
      "ES2022"
    ],
    "rootDir": "src",
    "outDir": "dist",
    "module": "ES2022",
    "moduleResolution": "Node16",
    "declaration": false,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/node_modules",
    "dist"
  ]
}